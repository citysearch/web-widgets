<?xml version="1.0" encoding="UTF-8"?>

<web-app id="starter" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>web-widgets</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:applicationContext*.xml</param-value>
	</context-param>

	<!-- Filters -->
	<filter>
		<filter-name>action2-cleanup</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ActionContextCleanUp</filter-class>
	</filter>

	<filter>
		<filter-name>action2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>action2-cleanup</filter-name>
		<url-pattern>/actions/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>action2</filter-name>
		<url-pattern>/actions/*</url-pattern>
	</filter-mapping>

	<!-- Listeners -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Servlets & Mappings-->
	<servlet>
		<description />
		<display-name>HealthCheckServlet</display-name>
		<servlet-name>HealthCheckServlet</servlet-name>
		<servlet-class>com.citysearch.webwidget.servlet.HealthCheckServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HealthCheckServlet</servlet-name>
		<url-pattern>/healthcheck</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>sample</servlet-name>
		<servlet-class>com.citysearch.webwidget.servlet.SearchQueryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sample</servlet-name>
		<url-pattern>/SearchQueryServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AdSample</servlet-name>
		<servlet-class>com.citysearch.webwidget.servlet.AdListQueryServlet</servlet-class>
		<init-param>
			<param-name>log4j-init-file</param-name>
			<param-value>/log4j.properties</param-value>
		</init-param>
		<init-param>
			<param-name>propertiesFile</param-name>
			<param-value>/images.properties</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdSample</servlet-name>
		<url-pattern>/Nearby_Places300x250</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>jspSupportServlet</servlet-name>
		<servlet-class>org.apache.struts2.views.JspSupportServlet</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
